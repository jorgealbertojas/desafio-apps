<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
                                    android:layout_height="@dimen/card_height"
                                    android:layout_margin="@dimen/card_margin"
                                    card_view:cardBackgroundColor="#fff"
                                    card_view:cardCornerRadius="@dimen/card_CornerRadius"
                                    card_view:cardElevation="@dimen/card_Elevation"
                                    card_view:cardUseCompatPadding="true">
    <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/iv_image_news"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:layout_width="wrap_content" />

        <TextView
                android:id="@+id/tv_editoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text1_margin_left"
                app:layout_constraintStart_toEndOf="@+id/iv_image_news"
                android:layout_marginEnd="8dp"
                android:textColor="@color/textTitle1"
                android:textSize="@dimen/text1_size" app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text2_size"
                android:textColor="@color/textTitle2"
                android:layout_marginStart="@dimen/text1_margin_left"
                android:ems="10"
                app:layout_constraintStart_toEndOf="@+id/iv_image_news"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_editoria" app:layout_constraintEnd_toEndOf="parent"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>